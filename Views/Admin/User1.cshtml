@model List<Shopkeeper>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Approved Shopkeepers</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admincss/User.css" rel="stylesheet" />
</head>
<body>
   

    <!-- Header Section -->
    <div class="header">
        <h1> Approved Shopkeepers</h1>
        <a href="/admin/Admindas" class="btn btn-secondary">Back to Dashboard</a>
    </div>


    <!-- Content Section -->
    <div class="container">
        <div class="card p-4">
            <h2 class="mb-4">List of Approved Shopkeepers</h2>
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Shopkeeper Name</th>
                        <th>Email</th>
                        <th>Shop Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                     @foreach (var a in Model)
                 {
                        <tr>
                            <td>@a.ShopId</td>
                            <td>@a.ShopName</td>
                            <td>@a.Email</td>
                            <td>@a.ShopName</td>
                            <td>
                                <button class="btn btn-warning">Block</button>
                                <button class="btn btn-danger">Remove</button>
                            </td>
                        </tr>
                 }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
