@{
    Layout = "_Layout1Admin";
}

    <!-- Main Content Section -->
    <div class="main-content">
        <section id="overview">
            <h2>Overview</h2>
            <p>Welcome to the admin panel. Here you can monitor and manage all platform activities.</p>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <div class="col">
                    <div class="card text-center p-3">
                        <h3>Total Users</h3>
                        <p>1200</p>
                    </div>
                </div>
                <div class="col">
                    <div class="card text-center p-3">
                        <h3>Total Orders</h3>
                        <p>850</p>
                    </div>
                </div>
                <div class="col">
                    <div class="card text-center p-3">
                        <h3>Total Products</h3>
                        <p>300</p>
                    </div>
                </div>
            </div>
        </section>

        <section id="manage-users" class="mt-5">
            <h2>Manage Users</h2>
            <p>View and control user accounts.</p>
            <button href="/admin/manageuser" class="btn btn-primary">View All </button>
        </section>

        <section id="sales-analytics" class="mt-5">
            <h2>Sales Analytics</h2>
            <p>Analyze sales trends and performance.</p>
            <button class="btn btn-primary">View Analytics</button>
        </section>

        <section id="reports" class="mt-5">
            <h2>Reports</h2>
            <p>Generate detailed reports on platform activities.</p>
            <button class="btn btn-primary">Generate Reports</button>
        </section>

        <section id="about" class="mt-5">
            <h2>About</h2>
            <p>
                This platform empowers local sellers and buyers to connect effortlessly and promotes local businesses.
            </p>
        </section>

        <section id="contact" class="mt-5">
            <h2>Contact</h2>
            <p>If you have any queries, feel free to contact us at support@localshop.com.</p>
        </section>
    </div>

 