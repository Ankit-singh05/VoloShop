@using VoloShop.Models;
@model ShopCategory;

@{
    Layout = "_Layout";
}

<div class="main-content">
   
    <h2 class="mb-4">Category Management </h2>

    <!-- Trigger Modal Button -->
    <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
        Add Category
    </button>

    <!-- Modal -->
    <div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCategoryModalLabel">@ViewBag.mysession Add New Category @ViewBag.sid</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-controller="Category" asp-action="Shopcategory" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="categoryName" class="form-label">Category Name</label>
                            <input type="text" class="form-control" asp-for="CategoryName">
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="pic" class="form-label">Upload Picture</label>
                            <input type="file" class="form-control" asp-for="Pic">
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>


                </div>
            </div>
        </div>
    </div>

    <div class="order-table">
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Category Name</th>
                    <th>Description</th>
                    <th>Pic</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in ViewBag.ShopCategory)
                {
                    <tr>
                        <td>@a.CategoryId</td>
                        <td>@a.CategoryName</td>
                        <td>@a.Description</td>
                        <td><img style="width:100px" src="~/image/@a.Pic" /></td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

