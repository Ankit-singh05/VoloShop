@using VoloShop.Models;
@model Shopkeeper;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Login & Signup</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>

    <div class="auth-card">
        <h2>Seller Login</h2>
        <form method="post" asp-action="Index" asp-controller="Home">
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" asp-for="Email" placeholder="Enter your email">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" asp-for="Password" placeholder="Enter your password">
            </div>
            <button type="submit" class="btn btn-primary w-100"> login</button>
            <div class="link-section">
                <a href="/home/SignUP">Don't have an account? Sign up</a>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
